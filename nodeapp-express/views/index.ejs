<% include partials/header %>
<h1>Web App Login</h1><br/>
<%- messages('messages',locals) %>
<% if(errors){%>
    <% errors.forEach(function(error){ %>
      <div class="alert alert-danger">
        <%= error.msg %>
      </div>
    <% }) %>
<% } %>
<form method="POST" action="/login">
  <table>
    <tr><td>
  Username: </td><td> <input type="text" name="username" id="username"></td></tr>
  <tr><td>
  Password: </td><td style="padding-top:5px"><input type="password" name="pass" id="pass"></td></tr>
  <tr><td></td><td style="padding-top:8px">
  <input type="submit" value="LogIn"></td></tr>
  <tr><td></td><td style="padding-top:5px">
  <a href="/forgot" style="color:#22313F">Forgot Password?</a></td></tr>
</table>
</form>
<% include partials/footer %>
